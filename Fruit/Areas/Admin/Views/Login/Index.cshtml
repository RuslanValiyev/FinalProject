
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body style="background-color:gray;">
    <div class="container ">
        <div class="row" style="height:80vh;">
            <div class="col-md-4 offset-md-4 align-self-center">
                <form action="~/Admin/Login/ValidateLogin" method="post">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label style="color:white;font-weight:bold;" for="exampleInputEmail1">Emailiniz</label>
                        <input type="email" name="Email" id="exampleInputEmail1" class="form-control" aria-describedby="emailHelp" placeholder="" required>
                    </div>
                    <div class="form-group">
                        <label style="color:white;font-weight:bold;" for="exampleInputEmail2">Parolunuz</label>
                        <input type="password" name="PassWord" class="form-control" id="exampleInputEmail2" aria-describedby="emailHelp" placeholder="" required>
                    </div>
                    <div class="form-group">
                        @if (@ViewBag.err != null)
                        {
                            <span style="color:red;font-weight:bold;">@ViewBag.err </span>
                        }

                    </div>
                    <button style="cursor:pointer;" type="submit" class="btn btn-primary w-100">Submit</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>

